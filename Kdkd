local function createFPSDisplay()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = game.CoreGui
    screenGui.IgnoreGuiInset = true

    local fpsLabel = Instance.new("TextLabel")
    fpsLabel.Parent = screenGui
    fpsLabel.Size = UDim2.new(0, 200, 0, 50)
    fpsLabel.Position = UDim2.new(0.5, -100, 0, -10)
    fpsLabel.BackgroundTransparency = 1
    fpsLabel.TextSize = 18
    fpsLabel.Font = Enum.Font.SourceSansBold
    fpsLabel.Text = "FPS: 0"
    fpsLabel.TextStrokeTransparency = 0
    fpsLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)

    while true do
        local fps = math.floor(1 / game:GetService("RunService").RenderStepped:Wait())
        fpsLabel.Text = "FPS : " .. tostring(fps)

        if fps <= 15 then
            fpsLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
        elseif fps >= 16 and fps <= 30 then
            fpsLabel.TextColor3 = Color3.fromRGB(255, 165, 0)
        elseif fps >= 31 and fps <= 49 then
            fpsLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
        elseif fps >= 50 then
            fpsLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        end
        
        wait(0.05)
    end
end

if getgenv().ShowFPS then
createFPSDisplay()
end

if getgenv().Fullbright then
    local Lighting = game.Lighting
    Lighting.ClockTime = 12
    Lighting.Brightness = 2
    Lighting.FogEnd = 100000
    Lighting.GlobalShadows = false
    Lighting.OutdoorAmbient = Color3.fromRGB(128, 128, 128)
    wait(0.1)
    local Lightingz = game:GetService("Lighting") -- Corrected assignment here
    for i, v in pairs(Lightingz:GetChildren()) do
        if v.ClassName == "Atmosphere" then
            v:Destroy() -- Added a colon for method call
        end
    end
end

loadstring(game:HttpGet("https://raw.githubusercontent.com/MerryXTrash/Main.lua/refs/heads/main/Checkgame.lua40"))()
