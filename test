-- Function to teleport the player to the heart's position
function Heart()
    local player = game.Players.LocalPlayer
    local heartFolder = game:GetService("Workspace").GameHearts

    for _, heart in pairs(heartFolder:GetChildren()) do
        if heart.Name == "Heart" then
            player.Character.HumanoidRootPart.CFrame = heart.CFrame * CFrame.new(0, -15, 0)
        end
    end
end

-- Function to check heart health and handle them appropriately
function checkHearts()
    local heartFolder = game:GetService("Workspace").GameHearts

    for _, heart in pairs(heartFolder:GetChildren()) do
        if heart.Name == "Heart" then
            local health = heart:FindFirstChild("Health")
            if health and health.Value == 0 then
                -- Destroy the heart
                heart:Destroy()
                
                -- Optionally, teleport to another heart
                Heart()
                
                break -- Exit loop once a heart is destroyed
            end
        end
    end
end
