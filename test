id == 7265397848 or id == 7251867574
local TweenService = game:GetService("TweenService")
local Workspace = game:GetService("Workspace")
local BossBattle = Workspace:FindFirstChild("BossBattle")
local Saigomo = BossBattle:FindFirstChild("Saigomo")

if Saigomo then
    -- Target CFrame, moved up by 10 units on the Y axis
    local targetCFrame = Saigomo.CFrame * CFrame.new(0, 10, 0)
    
    -- TweenInfo: duration of 1 second, Linear easing style, InOut easing direction
    local tweenInfo = TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut)
    
    -- Goal: the target CFrame
    local goal = {CFrame = targetCFrame}
    
    -- Create the tween
    local tween = TweenService:Create(Saigomo, tweenInfo, goal)

local gameHearts = game:GetService("Workspace").GameHearts

function toHeart()
    for _, v in pairs(gameHearts.Heart:GetChildren()) do
        if v.ClassName == "UnionOperation" then
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame * CFrame.new(0, 0, -13)
        end
    end
end

function check()
    local found = false
    for _, v in pairs(gameHearts:GetChildren()) do
        if v:IsA("Model") and v:FindFirstChildOfClass("BoolValue") then
            found = true
            v:Destroy()
            break
        end
    end
    if not found then
        toHeart()
    end
end

check()
    
    -- Play the tween
    tween:Play()
end
