function nofall()
   game.Workspace.Gravity = 0
end

function Unnofall()
   game.Workspace.Gravity = 150
end
-- Ensure this script is a LocalScript, running on the client

-- Get the player's character
local player = game.Players.LocalPlayer
local character = player and player.Character
if character then
    local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
    if humanoidRootPart then
        -- Loop through all children of BossBattle in Workspace
        for _, v in pairs(game:GetService("Workspace").BossBattle:GetChildren()) do
            -- Check if the child is a Model
            if v:IsA("Model") then
                -- Find the SpiderHitbox inside the Model
                local spiderHitbox = v:FindFirstChild("SpiderHitbox")
                if spiderHitbox then
                    spiderHitbox.Size = Vector3.new(100, 30, 30) -- Set the size of SpiderHitbox
                    
                    -- Create a new part
                    local part = Instance.new("Part")
                    part.Size = Vector3.new(2, 30, 30) -- Set the size to (2, 30, 30)
                    part.Anchored = true
                    part.CanCollide = true -- Enable collision for the part
                    part.Transparency = 1 -- Fully transparent (invisible)
                    part.CFrame = spiderHitbox.CFrame * CFrame.new(-25, 0, 0) -- Offset the part's position
                    part.Parent = spiderHitbox -- Parent the part to SpiderHitbox
                    
                    -- Wait to ensure the part is fully instantiated
                    wait(1.5) -- Consider using a more reliable method if necessary
                    humanoidRootPart.CFrame = part.CFrame
                end
            end
        end
    end
end

local gameHearts = game:GetService("Workspace").GameHearts

function toHeart()
    for _, v in pairs(gameHearts.Heart:GetChildren()) do
        if v.ClassName == "UnionOperation" then
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v.CFrame * CFrame.new(0, 0, -13)
        end
    end
end

function check()
    local found = false
    for _, v in pairs(gameHearts:GetChildren()) do
        if v:IsA("Model") and v:FindFirstChildOfClass("BoolValue") then
            found = true
            v:Destroy()
            break
        end
    end
    if not found then
        toHeart()
    end
end

check()
