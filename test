local workspace = game:GetService("Workspace")
local heartsFolder = workspace.GameHearts.Heart

-- Function to check if a heart has a child named "Destroy"
local function hasDestroyChild(heart)
    for _, child in pairs(heart:GetChildren()) do
        if child.Name == "Destroy" then
            return true
        end
    end
    return false
end

-- Function to teleport player to the heart if it contains a child named "Root"
local function teleportPlayerToHeart(heart)
    for _, child in pairs(heart:GetChildren()) do
        if child.Name == "Root" then
            local player = game.Players.LocalPlayer
            if player and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
                player.Character.HumanoidRootPart.CFrame = heart.CFrame * CFrame.new(0, 12, 0)
            end
            return
        end
    end
end

-- Main script logic
for _, heart in pairs(heartsFolder:GetChildren()) do
    if not hasDestroyChild(heart) then
        teleportPlayerToHeart(heart)
    end
end
